{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "src/*": ["src/*"],
    },
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "types": [
    ],
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "exclude": [
    "/dist/",
    "/node_modules",
    "/stories",
    ".quasar"
  ],
}