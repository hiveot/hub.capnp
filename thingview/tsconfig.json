{
  "compilerOptions": {
//    "allowJs": true,
//    "noImplicitAny": false,


    "baseUrl": ".",
    "jsx": "preserve",
    // https://vitejs.dev/guide/features.html#typescript-compiler-options
    "isolatedModules": true,
    "module": "esnext",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "src/*": ["src/*"]
    },
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "types": [
      "vite/client"
    ],
    "skipLibCheck": true,
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
      "scripthost"
    ]
  },
  "include": [
    "decs.d.ts",
    "./src/**/*.ts",
    "./src/**/*.d.ts",
    "./src/**/*.tsx",
    "./src/**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules",
    "stories",
    ".quasar"
  ],
}