{
  // https://vitejs.dev/guide/features.html#typescript-compiler-options
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "isolatedModules": true,
    "lib": [
      "esnext",
      "dom",
    ],
    "jsx": "preserve",
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "src/*": ["src/*"]
    },
    "resolveJsonModule": true,
    "skipLibCheck": true,
//    "sourceMap": true,
    "outDir": "dist/tmp",
    "strict": true,
    "target": "esnext",
    "types": [
      "vite/client"
    ],
  },
  "include": [
    "*.ts",
    "src/**/*.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue"
  ],
  "exclude": [
    "dist",
    "node_modules",
    ".quasar"
  ],
}