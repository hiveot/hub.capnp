package thing

// CreateThingID  constructs a Thing's ID from the publisher, deviceID and device type
// Format: urn:publisherID:deviceID:deviceType
//
//	publisherID is optional. Indicates the publisher of the device.
//	deviceID is required. Typically a locally unique identifier.
//	deviceType is optional. Intended to simplify logging and debugging
func CreateThingID(publisherID, deviceID, deviceType string) string {
	id := "urn:"
	if publisherID != "" {
		id = id + publisherID + ":" + deviceID
	} else {
		id = deviceID
	}
	if deviceType != "" {
		id = id + ":" + deviceID
	}

	return id
}
